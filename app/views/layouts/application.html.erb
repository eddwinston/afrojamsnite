<!DOCTYPE html>
<html>
<head>
  <title><%= title %></title>
  <%= javascript_include_tag :all %>
  <%= csrf_meta_tag %>
  <%= render 'layouts/stylesheets' %>
  <%= yield(:head) if content_for?(:head) %>
  <script>
    $(document).ready(function() {
        $('.media').media({ 
            width:     40, 
            height:    40, 
            autoplay:  false, 
            src:       '/audio/Cutlass.mp3', 
        });
    });
  </script>
</head>
<body>
    <div id="container">
        <header>
            <%= render 'layouts/header_top' %>
            
            <%= render 'layouts/header_bottom'%>
        </header>
        
        <section class="round">
            <% flash.each do |key, value| %>
                <div class="flash <%= key %>">
                    <%= value %>                
                </div>
            <% end %>
            <%= content_for?(:content) ? yield(:content) : yield %>
            
        </section>
    </div>
 <!-- <a class="media" href="/audio/Cutlass.mp3">MP3 File</a> -->
</body>
</html>
