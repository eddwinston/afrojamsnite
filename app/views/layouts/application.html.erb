<!DOCTYPE html>
<html>
<head>
  <title><%= title %></title>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
  <%= render 'layouts/stylesheets' %>
</head>
<body>
    <div id="container">
        <header>
            <div id="header_top">
                <a href="<%= root_path %>">
                    <img src="/images/afro_logo.jpg" alt="Afro Jams Nite">
                </a>
                <div id="site_title">
                    Afro Jams Nite
                </div>
            </div>
            <div style="clear:both"></div>
            <div class="header_bottom">
                <nav>
                    <ul>
                        <li>
                            <%= link_to "Home", root_path %>
                        </li>
                        <li>
                            <%= link_to "Events", events_path %>
                        </li>
                    </ul>
                </nav>
                
                <nav id="user_links">
                    <ul>
                    <% if signed_in? %>
                        <li><%= link_to "Sign out", signout_path, :method => :delete %></li>
                    <% else %>
                        <li><%= link_to "Sign in", signin_path %></li>
                    <% end %>
                    </ul>
                </nav>
                <div style="clear:both"></div>
            </div>
        </header>
        
        <section class="round">
            <%= yield %>
        </section>
    </div>

</body>
</html>
