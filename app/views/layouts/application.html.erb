<!DOCTYPE html>
<html>
<head>
  <title><%= title %></title>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
  <%= render 'layouts/stylesheets' %>
</head>
<body>
    <div id="container">
        <header>
            <div id="header_top">
                <a href="<%= root_path %>">
                    <img src="/images/afro_logo.jpg" alt="Afro Jams Nite">
                </a>
                <div id="site_title">
                    Afro Jams Nite
                </div>
            </div>
            <div style="clear:both"></div>
            <div class="header_bottom">
                <nav class="pages">
                    <ul>
                        <li>
                            <a href="<%= root_path %>">
                                <span> Home </span>
                            </a>
                        </li>
                        <li>
                            <a href="<%= events_path %>">
                                <span> Events </span>
                            </a>
                        </li>
                        <li>
                            <a href="<%= gallery_path %>">
                                <span> Gallery </span>
                            </a>
                        </li>
                        <li>
                            <a href="<%= about_path %>">
                                <span> About </span>
                            </a>
                        </li>
                    </ul>
                </nav>
                
                <nav id="user_links">
                    <ul>
                    <% if signed_in? %>
                        <li>
                            <a href="<%= signout_path %>" data-method="delete" rel="nofollow">
                               <span>Sign out</span> 
                            </a>
                    <% else %>
                        <li>
                            <a href="<%= signin_path %>">
                               <span>Sign in</span> 
                            </a>
                        </li>
                    <% end %>
                    </ul>
                </nav>
                <div style="clear:both"></div>
            </div>
        </header>
        
        <section class="round">
            <% flash.each do |key, value| %>
                <div class="flash <%= key %>">
                    <%= value %>                
                </div>
            <% end %>
            <%= content_for?(:content) ? yield(:content) : yield %>
            
        </section>
    </div>

</body>
</html>
